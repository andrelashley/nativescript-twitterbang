<Page 
    xmlns="http://schemas.nativescript.org/tns.xsd" 
    xmlns:TB="nativescript-twitterbang" loaded="pageLoaded">
    <Page.actionBar>
        <ActionBar title="NativeScript-TwitterBang" color="#fff" backgroundColor="#FF1744" />
    </Page.actionBar>
    <StackLayout>
        <GridLayout rows="auto" columns="*, auto">
            <Label fontSize="20" col="0" text="Tap the heart >>>" textWrap="true" />
            <TB:TwitterBang col="1" tap="bangThis" dotColors="#ff4801,#ff3493,#ff4081,#ff9927">
                <image src="~/images/greyHeart.png" class="center" stretch="aspectFit" />
            </TB:TwitterBang>
        </GridLayout>
    </StackLayout>
</Page>