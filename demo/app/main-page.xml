<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
    <Page.actionBar>
    <ActionBar title="NativeScript-TwitterBang" color="#fff" backgroundColor="#4CAF50" />
  </Page.actionBar>
    <StackLayout>
        <label text="Twitter Heart Animation" textWrap="true" class="title" />
        
        <button text="Tap this" tap="bangThis" margin="10" />
        
        <label text="Or This" class="sub" tap="bangThis" margin="10" />

        <button text="This" tap="bangThis" margin="10" />

        <label text="And This" class="message" tap="bangThis" margin="10" />
        
        <label text="LIKE" class="tiny" tap="bangThis" margin="10" />

    </StackLayout>
</Page>